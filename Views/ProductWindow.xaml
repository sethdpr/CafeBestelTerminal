<Window x:Class="CafeBestelTerminal.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Productdetails" Height="220" Width="360"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Product" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="Naam:" Width="120"/>
                <TextBlock Text="{Binding Naam}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="Prijs:" Width="120"/>
                <TextBlock Text="{Binding Prijs, StringFormat=€{0:F2}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="Datum toegevoegd:" Width="120"/>
                <TextBlock Text="{Binding DatumToegevoegd, StringFormat={}{0:d}}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Verwijder" Width="100" IsCancel="False" Click="Verwijder_Click"/>
        </StackPanel>
    </Grid>
</Window>