<Window x:Class="CafeBestelTerminal.Views.KlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Klantdetails" Height="300" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Klant" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
            <WrapPanel Margin="0,2">
                <TextBlock Text="Naam:" Width="120"/>
                <TextBlock Text="{Binding Naam}"/>
            </WrapPanel>
            <WrapPanel Margin="0,2">
                <TextBlock Text="Beschrijving:" Width="120"/>
                <TextBlock Text="{Binding Beschrijving}" TextWrapping="Wrap"/>
            </WrapPanel>
        </StackPanel>

        <GroupBox Header="Bestellingen" Grid.Row="1" Margin="0,8,0,8">
            <ItemsControl ItemsSource="{Binding Bestellingen}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Naam}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Verwijder" Width="100" Click="Verwijder_Click"/>
        </StackPanel>
    </Grid>
</Window>
